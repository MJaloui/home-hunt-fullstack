<!doctype html>
<html>

<head>
  <title>Home Hunt</title>
  <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <div class="container">

    <div class="page-header text-center">
      <h1><span class="fa fa-home"></span> Home Hunt - My Listings</h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

      <!-- LOCAL INFORMATION -->
      <div class="col-sm-6">
        <div class="well">
          <h3><span class="fa fa-user"></span> Local</h3>

          <% if (user.local.email) { %>
            <p>
              <strong>id</strong>: <%= user._id %><br>
                <strong>email</strong>: <%= user.local.email %><br>
                  <strong>password</strong>: <%= user.local.password %>
            </p>

            <a href="/unlink/local" class="btn btn-default">Unlink</a>
            <% } else { %>
              <a href="/connect/local" class="btn btn-default">Connect Local</a>
              <% } %>

        </div>
      </div>
      <div class="col-sm-6">
        <h3>My Home Listings</h3>
        <ul class="messages">
          <% for(var i=0; i<homes.length; i++) {%>
            <li class="message">
              <div class="home-listing">
                <p><strong>Address:</strong>
                  <%= homes[i].address %>
                </p>
                <p><strong>Price:</strong> $<%= homes[i].price || 'N/A' %>
                </p>
                <p><strong>Comments:</strong>
                  <%= homes[i].comments || 'No comments' %>
                </p>
                <div class="home-actions">
                  <span class="loveit-count">Love it: <%= homes[i].loveit || 0 %></span>
                  <button class="loveit-btn btn btn-success btn-sm" data-home-id="<%= homes[i]._id.toString() %>"
                    data-loveit="<%= homes[i].loveit || 0 %>">
                    <i class="fa fa-heart" aria-hidden="true"></i> Love it
                  </button>
                  <span class="hateit-count">Hate it: <%= homes[i].hateit || 0 %></span>
                  <button class="hateit-btn btn btn-danger btn-sm" data-home-id="<%= homes[i]._id.toString() %>"
                    data-hateit="<%= homes[i].hateit || 0 %>">
                    <i class="fa fa-times-circle" aria-hidden="true"></i> Hate it
                  </button>
                  <button class="delete-btn btn btn-default btn-sm" data-home-id="<%= homes[i]._id.toString() %>">
                    <i class="fa fa-trash" aria-hidden="true"></i> Delete
                  </button>
                </div>
              </div>
            </li>
            <% } %>
        </ul>

        <h2>Add a Home Listing</h2>
        <% if (user.local.email) { %>
          <form action="/homes" method="POST">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Address" name="address" required>
            </div>
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Price" name="price" required>
            </div>
            <div class="form-group">
              <textarea class="form-control" placeholder="Comments about the home" name="comments" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
          <% } %>
      </div>

    </div>

    <script src="main.js"></script>

</body>

</html>